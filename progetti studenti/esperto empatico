import time
#introduzione
print('ciao')
time.sleep(0.5)
print('come va?')
risposta = input()

if risposta == 'bene':
  print('sono contento!')
  time.sleep(0.5)
  print('hai preso un bel voto di fisica per caso?')
  risposta = input()
  if risposta == ('si'):
    print('bravo, ben fatto!')
    time.sleep(0.5)
    print('anche io sono bravo, mettimi alla prova!')
  elif risposta == ('no'):
    print('che peccato!')
    time.sleep(0.5)
    print('puoi sempre rimediare!')
  else:
    print('hahaha')
    time.sleep(0.5)
    print('si può sempre migliorare.')
elif risposta == 'male':
  print('mi dispiace!')
  time.sleep(0.5)
  print('hai per caso una verifica di fisica nei prossimi giorni?')
  risposta = input()
  if risposta == ('si'):
    print('allora ti posso dare una mano volentieri!')
  elif risposta == ('no'):
    print('studiare un po\' non ti farà di sicuro male')
  else:
    print('farò finta di aver capito')
else:
  print('ok, ma parliamo di cose importanti...')
  time.sleep(0.5)
  print('come vai in fisica?')
  risposta = input()
  if risposta == ('bene'):
    print('bravo, ma scommetto che puoi fare ancora meglio!')
  elif risposta == ('male'):
    print('oh no, dobbiamo rimediare!')
  else:
    print('beh dai')

#definizioni
time.sleep(1)
print('facciamo un po\' di ripasso!')
time.sleep(1.5)
print ('di quale termine vorresti avere la definizione?')
print('puoi scegliere tra:')
time.sleep(0.5)
print('-temperatura')
time.sleep(0.5)
print('-calore')
time.sleep(0.5)
print('-capacità termica')
time.sleep(0.5)
print('-calore specifico')
time.sleep(0.5)
print('-calore latente')
time.sleep(0.5)
print('-evaporazione')
time.sleep(0.5)
print('-ebollizione')
risposta = input()
#risposte definizioni
if risposta == 'temperatura':
  print('la temperatura di un corpo è il valore indicato da un termometro in equilibrio termico con esso.')
elif risposta == 'calore':
  print('il calore è l\'energia scambiata tra due corpi a causa della differenza di temperatura tra essi')
elif risposta == 'capacità termica':
  print('la capacità termica è la quntità di energia necessaria per aumentare la temperatura di un corpo di 1K')
elif risposta == 'calore specifico':
  print('il calore specifico è la quantità di energia necessaria per aumentare la temperatura di un corpo di 1K')
elif risposta == 'calore latente':
  print('il calore latente è la quantità di energia che si deve fornire perchè 1K della sostanza effettui un determinato passaggio di stato')
elif risposta == 'evaporazione':
  print('l\'evaporazione è il processo di vaporizzazione che avviene sulla superficie di un liquido')
elif risposta == 'ebollizione':
  print('l\'ebollizione è il processo di vaporizzazione che coinvolge l\'intera massa di un liquido')
else:
  time.sleep(1)
  print('scusa non ho capito.')

#ripetizione definizioni
