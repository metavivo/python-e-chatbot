print('serve altro?')
risposta = input()
#formule
if risposta == 'si':
  print('vuoi che ti dia una formula?')
  risposta = input()
  if risposta == 'no':
    print('pensaci bene!')
  elif risposta == 'si':
    print('quale formula vuoi?')
    time.sleep(0.5)
    print('-dilatazione lineare')
    time.sleep(0.5)
    print('-dilatazione volumica')
    time.sleep(0.5)
    print('-capacità termica')
    time.sleep(0.5)
    print('-calore specifico')
    time.sleep(0.5)
    print('-calore latente')
    time.sleep(0.5)
    print('-equazione del calore')
    risposta = input()
    if risposta == ('dilatazione lineare'):
      print('∆L=λLi∆T')
    elif risposta == ('dilatazione volumica'):
      print('V=αVi∆T')
    elif risposta == ('capacità termica'):
      print('∆E=C∆T')
    elif risposta == ('calore specifico'):
      print('∆E=cm∆T')
      print('oppure')
      print('C=cm')
    elif risposta == ('calore latente'):
      print('Q=Lm')
    elif risposta == ('equazione del calore'):
      print('c1xm1x(Tf-Ti1)=-c2xm2x(Tf-Ti2)')
    else:
      time.sleep(1)
      print('scusa non ho capito.')
#ripetizione formula
    time.sleep (1)
    print('vuoi un\'altra formula?')
    risposta = input()
